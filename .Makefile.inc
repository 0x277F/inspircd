    RUNCC = $(CC)
@ELSE
    @GNU_ONLY MAKEFLAGS += --silent
    RUNCC = $(COMPILE_ROOT)/make/run-cc.pl $(CC)
@ENDIF

@GNU_ONLY export COMPILE_ROOT RUNCC FLAGS NICEFLAGS CC LDLIBS MODULES MODPATH LIBPATH INSTMODE
