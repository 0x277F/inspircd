sub resolve_directory {
	use File::Spec;
	return File::Spec->rel2abs($_[0]);
}

sub yesno {
	my ($flag,$prompt) = @_;
	print "$prompt [\033[1;32m$config{$flag}\033[0m] -> ";
	chomp($tmp = <STDIN>);
	if ($tmp eq "") { $tmp = $config{$flag} }

	if (($tmp eq "") || ($tmp =~ /^y/i)) {
		$config{$flag} = "y";
	} else {
		$config{$flag} = "n";
        }
	return;
}


